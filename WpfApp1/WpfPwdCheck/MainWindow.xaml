<Window x:Class="WpfPwdCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPwdCheck"
        mc:Ignorable="d"
        Title="Password Checker" Height="450" Width="450">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="txtHeader" Text="Tarkistettava salasana"></TextBlock>
            <PasswordBox x:Name="psbPassword" PasswordChanged="PsbPassword_PasswordChanged"></PasswordBox>
            <TextBlock x:Name="txtTotal">....</TextBlock>
            <TextBlock x:Name="txtUpper">....</TextBlock>
            <TextBlock x:Name="txtLower">....</TextBlock>
            <TextBlock x:Name="txtNumber">....</TextBlock>
            <TextBlock x:Name="txtSpecial">....</TextBlock>
            <Label x:Name="lblMessage" Height="30" Background="Gray" >Anna salasana</Label>
        </StackPanel>
    </Grid>
</Window>
